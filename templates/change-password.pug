extends layout.pug 
block mainContent 
  .container(class="bg-[#dfdfdf] w-full p-[20px]")
    div(class="w-[750px] h-[268px] bg-[#fff] border border-[#dfdfdf] rounded-[3px]")
      div(class="border-b-[1px] border-[#dfdfdf] p-[10px] text-[15px] h-[18px] leading-[18px]")
        span(class="text-[#778087] inline-block mr-[10px]") 
          a(href="#") V3EX
        span(class="inline-block pl-[50px]").
          &gt; 通过电子邮件重设密码
      div(class="p-[10px] w-full")
        form(action="/change-password?token=" + token, method="post" class="w-full") 
          table(class="w-full") 
            tbody(class="w-full") 
              tr(class="w-full") 
                td(width="120" align="right" class="p-[5px]") 用户名 
                td(width="auto" align="left" class="p-[5px]") 
                  input(type="text" placeholder="" name="accountName" class="w-[17px]" value=tokenInfo.accountName)
              tr
                td(width="120" align="right") 新密码
                td(width="auto" align="left") 
                  input(type="text" name="newPassword" class="w-[17px] p-[5px] border-[1px]")
              tr(class="w-full")
                td(width="120" align="right" class="p-[5px]") 请确认密码
                td(width="auto" align="left" class="p-[5px]")
                  input(type="text" name="newConfirmedPassword")
              tr(class="w-full")
                td(width="120" align="right" class="p-[5px]") 
                td(width="auto" align="left" class="p-[5px]")
                  button 提交

    